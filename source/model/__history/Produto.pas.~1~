unit Produto;

interface

type
  TProduto = class
  private
    FID: Integer;
    FNome: string;
    FPreco: Double;
    FSaldo: Integer;
  public
    constructor Create(AID: Integer; ANome: string; APreco: Double; ASaldo: Integer);

    property ID: Integer read FID write FID;
    property Nome: string read FNome write FNome;
    property Preco: Double read FPreco write FPreco;
    property Saldo: Integer read FSaldo write FSaldo;

    function ToString: string; override;  // Método para visualizar os dados
  end;

implementation

uses
  System.SysUtils;

{ TProduto }

constructor TProduto.Create(AID: Integer; ANome: string; APreco: Double; ASaldo: Integer);
begin
  FID := AID;
  FNome := ANome;
  FPreco := APreco;
  FSaldo := ASaldo;
end;

function TProduto.ToString: string;
begin
  Result := Format('ID: %d, Nome: %s, Preço: %.2f, Saldo: %d', [FID, FNome, FPreco, FSaldo]);
end;

end.

